{
  "name": "moneybox-product-explorer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "vite",
    "server": "node server/server.js",
    "build": "vite build",
    "build:analyze": "npm run build && open dist/stats.html",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui", 
    "test:unit": "vitest src/__tests__/ProductExplorer.test.jsx",
    "test:integration": "vitest src/__tests__/api.integration.test.js",
    "test:coverage": "vitest --coverage",
    "performance": "npm run build && npm run preview",
    "deploy:staging": "chmod +x scripts/deploy-staging.sh && ./scripts/deploy-staging.sh",
    "deploy:production": "chmod +x scripts/deploy-production.sh && ./scripts/deploy-production.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health:check": "curl -f http://localhost:3002/api/health && curl -f http://localhost:3000/",
    "verify:deployment": "chmod +x scripts/verify-deployment.sh && ./scripts/verify-deployment.sh"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^8.2.0",
    "jsdom": "^26.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "vite": "^4.4.5",
    "vitest": "^0.34.0"
  }
}
