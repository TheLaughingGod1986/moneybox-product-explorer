# Production Environment Configuration
NODE_ENV=production
PORT=3002

# API Configuration
CORS_ORIGIN=https://moneybox.com

# Database Configuration
DB_HOST=prod-db.moneybox.com
DB_PORT=5432
DB_NAME=moneybox_production
DB_USER=moneybox_prod_user
DB_PASSWORD=${PRODUCTION_DB_PASSWORD}

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STRICT_MAX=20

# Security
HELMET_ENABLED=true
CSP_ENABLED=true

# Performance
API_TIMEOUT=5000
REQUEST_SIZE_LIMIT=10mb

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn.moneybox.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
